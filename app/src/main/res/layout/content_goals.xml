<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pmr.finalproject.Goals"
    tools:showIn="@layout/activity_goals">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOALS"
        android:id="@+id/content_goals_textView"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:drawableTop="@drawable/ic_heart"
        android:textColor="#A9A8A8"
        android:layout_marginBottom="2dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/content_goals_textView"
        android:id="@+id/content_goals_view"
        android:background="#00A79D"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_goals_view"
        android:weightSum="3"
        android:id="@+id/content_goals_linear"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goals_button1"
            android:layout_marginRight="8dp"
            android:text="DAY"
            android:textColor="#9E9E9E"
            android:background="@drawable/button_goals"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goals_button2"
            android:layout_marginRight="8dp"
            android:text="WEEK"
            android:textColor="#9E9E9E"
            android:background="@drawable/button_goals"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_goals"
            android:id="@+id/goals_button3"
            android:textColor="#9E9E9E"
            android:text="MONTH"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_below="@+id/content_goals_linear"
        android:layout_height="wrap_content"
        android:id="@+id/content_goals_image1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_walk"/>
    <EditText
        android:id="@+id/inputSearchEditText"
        android:layout_below="@+id/content_goals_image1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="#A9A8A8"
        android:gravity="center"
        android:textColorHint="#A9A8A8"
        android:hint="What is your walking goal?"
        android:inputType="number"
        android:background="@drawable/search_box"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_below="@+id/inputSearchEditText"
        android:layout_height="wrap_content"
        android:id="@+id/content_goals_image2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_action_name"/>
    <EditText
        android:id="@+id/content_goals_editText"
        android:layout_below="@+id/content_goals_image2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="#A9A8A8"
        android:textColorHint="#A9A8A8"
        android:gravity="center"
        android:hint="What is your running goal?"
        android:inputType="number"
        android:background="@drawable/search_box"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:text="SAVE"
        android:textColor="#A9A8A8"
        android:id="@+id/content_goals_button"
        android:layout_marginBottom="75dp"/>


</RelativeLayout>
